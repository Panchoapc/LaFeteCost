<p id="notice"><%= notice %></p>

<h1>Productos</h1>

<table class="table table-stripped table-bordered table-hover">
  <thead class="table-dark">
    <tr>
      <th>Codigo del producto</th>
      <th>Costo materia prima</th>
      <th>Nombre</th>
      <th>Detalle</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @productos.each do |producto| %>
      <tr>
        <td><%= producto.CodProd %></td>
        <td><%= producto.CostoMatPrima %></td>
        <td><%= producto.Nombre %></td>
        <td><%= producto.Detalle %></td>
        <td><%= link_to 'Show', producto %></td>
        <td><%= link_to 'Edit', edit_producto_path(producto) %></td>
        <td><%= link_to 'Destroy', producto, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Producto', new_producto_path, class:"btn btn-dark" %>
