<p id="notice"><%= notice %></p>

<h1>Maquinas</h1>

<table class="table table-stripped table-bordered table-hover">
  <thead class="table-dark">
    <tr>
      <th>Maquina</th>
      <th>Nombre de la maquina</th>
      <th>Costo por hora</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @maquinas.each do |maquina| %>
      <tr>
        <td><%= maquina.Maquina_id %></td>
        <td><%= maquina.NombreMaquina %></td>
        <td><%= maquina.CostoHora %></td>
        <td><%= link_to 'Show', maquina %></td>
        <td><%= link_to 'Edit', edit_maquina_path(maquina) %></td>
        <td><%= link_to 'Destroy', maquina, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Maquina', new_maquina_path, class:"btn btn-dark" %>
